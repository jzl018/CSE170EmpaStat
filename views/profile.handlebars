<!DOCTYPE html>
<html>
	<head>
		<title>Multus</title>	
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">

		<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Karma">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

		<link href="css/bootstrap.css" rel="stylesheet">
		<link href="css/bootstrap-theme.css" rel="stylesheet">
		<link href="css/multus.css" rel="stylesheet"/>
		<link href="css/w3.css" rel="stylesheet"/>

		<!-- Used for Bottom nav bar -->
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	</head>

  <body class="bg-color">
		{{#if side}}
			<!-- Sidenav (hidden by default) -->
			<nav class="w3-sidenav w3-card-2 w3-top w3-xlarge w3-animate-left" style="display:none;z-index:2;width:40%;min-width:300px" id="mySidenav">
			  <a href="javascript:void(0)" onclick="w3_close()"
			  class="w3-closenav">Close Menu</a>
			  <a href="/" onclick="w3_close()">Tasks</a>
			  <a href="profile" onclick="w3_close()">Profile</a>
			  <a href="history" onclick="w3_close()">Past Tasks</a>
			  <a href="login" onclick="w3_close()">Logout</a>
			</nav>
		{{else}}
			<!-- Bottom navigation -->
			<div class="w3-bottom">
	   			<ul class="nav nav-pills">
		      		<li><a href="home_B"><span class="glyphicon glyphicon-tasks"></span> Tasks</a></li>
		      		<li class="active"><a href="profile_B"><span class="glyphicon glyphicon-user"></span> Profile</a></li>
			      	<li><a href="history_B"><span class="glyphicon glyphicon-calendar"></span> Past Tasks</a></li>
					<li><a href="login"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
		   		</ul>
	  		</div>
		{{/if}}

		<!-- Top menu -->
		  <div class="w3-top"> 
		  	<div class="w3-xlarge w3-padding-xlarge" style="max-width:1200px;margin:auto">
		  		
		  	<!-- Unneeded for bottom nav -->
		  	{{#if side}}
		    	<div class="w3-opennav w3-left w3-hover-text-white" onclick="w3_open()">&#9776</div>
		    {{/if}}

		    {{#if side}}
		    	<div class="w3-right">
				  	<img src= "/images/info.png" onclick="location.href='help'" class="w3-btn-floating" style ="background-color: #4990E2">
				</div>
			{{else}}
		    	<div class="w3-right">
					<img src= "/images/info.png" onclick="location.href='help_B'" class="w3-btn-floating" style ="background-color: #4990E2">
				</div>
			{{/if}}

		    <div class="w3-center top-center">&nbsp; Profile</div>
		  </div>
		</div>

		<br/> <br/> <br/> <br/>

		<div class="container text-center" id ="text-design">
				{{#each users}}
					<br><img src= "/images/profile-pic.png" style ="background-color: #FAFAFA" class="text-center">
					<h2>{{name}}</h2> <br><hr> <br>
					<h2> Stats </h2> </br>
					<p>Created Categories - {{createdcategories}} categories</p>
					<p>Created Tasks - {{createdtasks}} tasks</p>
					<p>Tasks Completed - {{completedtasks}} tasks</p> <br/> <hr> <br>
				{{/each}}
				<h2> Challenges </h2> </br>
				<div class="d-inline-block bg-warning text-center">
					<h3> ---- Completed ---- </h3>
						{{#each challenges}}
							{{#if complete}}
								<div class="friend">
									<!-- <i class="fa fa-trophy" style="font-size:200px;color:gold;"></i> --> 
									<i><img src= "/images/trophy-done.png" style="background-color:#FAFAFA" id="trophy"></i>
									<p> {{name}} </p>
								</div>
							{{/if}}
						{{/each}}
				</div>

				<br/>

				<div class="d-inline-block bg-warning text-center">
					<h3> ---- Upcoming ---- </h3>
						{{#each challenges}}
							{{#unless complete}}
								<div class="friend">
									<!-- <i class="fa fa-trophy" style="font-size:150px;color:grey;"></i> -->
									<i><img src= "/images/trophy-notdone.png" style="background-color:#FAFAFA" id="trophy"></i>
									<p> {{name}} </p>
								</div>
							{{/unless}}
						{{/each}}
				</div>
		</div>
		
		<script>
			// Script to open and close sidenav
			function w3_open() {
			    document.getElementById("mySidenav").style.display = "block";
			}
			 
			function w3_close() {
			    document.getElementById("mySidenav").style.display = "none";
			}
		</script>

		<script src="js/jquery-1.11.0.js"></script>
		<script src="js/multus.js"></script>
		<script src="js/bootstrap.js"></script>
		
